apiVersion: v1
kind: Pod
metadata:
  name: ${NAME}
  labels:
    app: ${NAME}
  annotations:
    cri-resource-manager.intel.com/prefer-isolated-cpus: '${ISOLATE}'
spec:
  containers:
  - image: busybox
    command:
      - sh
      - -c
      - echo ${NAME} \$(sleep inf)
    imagePullPolicy: IfNotPresent
    name: busybox
    resources:
      requests:
        cpu: ${CPU}
        memory: ${MEM}
      limits:
        cpu: ${CPU}
        memory: ${MEM}
  terminationGracePeriodSeconds: 1
